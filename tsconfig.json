{
  "compilerOptions": {
    "module": "CommonJS",
    "baseUrl": "src",
    "noImplicitAny": true,
    "target": "es5",
    "outDir": "dist",
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
